{
  "name": "@tiesen243/docker-php",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "format": "prettier --check \"**/*.{css,html,js,json,md,php}\" --write --cache",
    "build:tailwind": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/globals.css --minify",
    "start": "docker compose up -d --build",
    "stop": "docker compose down -v"
  },
  "dependencies": {},
  "devDependencies": {
    "@prettier/plugin-php": "^0.24.0",
    "@tailwindcss/cli": "^4.1.11",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11"
  }
}
