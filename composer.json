{
  "name": "tiesen243/docker-php",
  "version": "1.0.0",
  "description": "A Docker setup for PHP development with Composer, PHPUnit, and Prettier.",
  "license": "MIT",
  "type": "project",
  "scripts": {
    "dev:up": "docker compose --env-file .env -f docker/docker-compose.dev.yml up -d --remove-orphans",
    "dev:down": "docker compose --env-file .env -f docker/docker-compose.dev.yml down -v",
    "format": "./node_modules/.bin/prettier --check \"**/*.{css,js,php}\" --write --cache",
    "prod:up": "docker compose --env-file .env -f docker/docker-compose.prod.yml up -d --remove-orphans",
    "prod:down": "docker compose --env-file .env -f docker/docker-compose.prod.yml down -v",
    "test": "./vendor/bin/phpunit --display-warnings --display-deprecations"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Framework\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {},
  "require-dev": {
    "phpunit/phpunit": "^12.3"
  }
}
